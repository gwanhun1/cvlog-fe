{
  "root": true,
  "extends": ["next/core-web-vitals"],
  "env": {
    "node": true,
    "es2021": true
  },
  "rules": {
    "import/order": "off"
  },
  "settings": {
    "next": {
      "rootDir": "./"
    }
  },
  "overrides": [
    {
      "files": ["*.js"],
      "parser": "espree",
      "parserOptions": {
        "ecmaVersion": 2021
      },
      "env": {
        "node": true
      },
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
